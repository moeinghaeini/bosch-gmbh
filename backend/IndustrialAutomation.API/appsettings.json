{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=IndustrialAutomationDb;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "Jwt": {
    "Secret": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "IndustrialAutomation",
    "Audience": "IndustrialAutomation",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "OpenAI": {
    "ApiKey": "your-openai-api-key-here",
    "BaseUrl": "https://api.openai.com/v1",
    "Model": "gpt-4"
  },
  "RateLimiting": {
    "MaxRequests": 100,
    "WindowSeconds": 60,
    "EndpointRules": {
      "POST:api/auth/login": {
        "MaxRequests": 5,
        "WindowSeconds": 60
      },
      "POST:api/auth/register": {
        "MaxRequests": 3,
        "WindowSeconds": 60
      },
      "POST:api/ai": {
        "MaxRequests": 20,
        "WindowSeconds": 60
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*"
}
